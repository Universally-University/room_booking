---
interface Props {
    title: string
}
const { title } = Astro.props;
---

<header class="h-16 bg-blue-500 border-b flex flex-col md:flex-row md:justify-between">
    <div class="logo pl-3 text-white font-bold flex items-center justify-between">
        <a href="/" class="text-3xl font-jakarta">
            { title }
        </a>
    </div>
    <div class="md:flex menu text-white flex flex-col md:flex-row items-center justify-center md:mx-4">
        <div class="px-4 ease-in-out duration-150 text-center cursor-pointer py-1 border-white border-y md:border-0 border-x-0 w-full md:w-fit">
            <a class="font-jakarta" href="/">Home</a>
        </div>
        <div class="px-4 ease-in-out duration-150 text-center cursor-pointer py-1 border-white border-y md:border-0 border-x-0 w-full md:w-fit">
            <a class="font-jakarta" href="/my-reservation">My Reservation</a>
        </div>
        <div class="px-4 ease-in-out duration-150 text-center cursor-pointer py-1 border-white border-y md:border-0 border-x-0 w-full md:w-fit">
            <a class="font-jakarta" href="/my-reservation">My Reservation</a>
        </div>
        <div class="px-4 ease-in-out duration-150 text-center cursor-pointer py-1 border-white border-y md:border-0 border-x-0 w-full md:w-fit">
            <a class="font-jakarta" href="/my-reservation">My Reservation</a>
        </div>
        <div class="px-4 ease-in-out duration-150 text-center cursor-pointer py-1 border-white border-y md:border-0 border-x-0 w-full md:w-fit">
            <a class="font-jakarta" href="/my-reservation">My Reservation</a>
        </div>
    </div>
</header>

