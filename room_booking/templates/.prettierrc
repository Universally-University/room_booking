{
    "singleQuote": true,
    "editor.formatOnSave": true,
    "printWidth": 130,
    "proseWrap": "always",
    "tabWidth": 4,
    "overrides": [
        {
            "files": "*.{json,yaml}",
            "options": {
                "tabWidth": 2
            }
        }
    ],
    "requireConfig": false,
    "useTabs": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": true
}
